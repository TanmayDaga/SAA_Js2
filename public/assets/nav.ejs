<!-- NavBar -->

<style>
    .title {
    font-family: 'Poppins', sans-serif;
    font-size: 30px;
    color: black;
    width: 0;
    overflow: hidden;
    white-space: no-wrap;
    display:block;
    border-right: 3px solid black;
    animation: typewriter 5s steps(7) infinite, blinking-cursor 0.8s infinite;
    animation-fill-mode: forwards
  }
  
  @keyframes typewriter {
    0% { width:0 }
    25% { width: 70% }
    48% { width: 100% }
    50% { width: 100% }
    55% { width: 100% }
    75% { width: 70%; }
    85% { width: 30%; }
    100% { width: 0; }
  }
  
  @keyframes blinking-cursor {
    from { border-color: transparent }
    to { border-color: red }
  }

  .nav-link {
    font-weight: 400;
    font-size: 16px;
    text-decoration: black;
    color: black;
    padding: 3px 0px;
    margin: 0px 3px;
    display: inline-block;
    position: relative;
    opacity: 1;
  }

  .nav-link::before {
    transition: 300ms;
    height: 3px;
    content: "";
    position: absolute;
    background-color: red;
  }

  .nav-link-ltr::before {
    width: 0%;
    bottom: 1px;
  }

  .nav-link-ltr:hover::before {
    width: 100%;
  }
  
</style>
<header class="bg-white">
    <nav class="navbar flex justify-between items-center w-[92%] mx-auto py-4">
        <div class="flex items-center">
            <img class="w-16 cursor-pointer" src="/assets/saa_logo_jpeg.jpeg" alt="...">
            <span class="title-holder">
                <span class="title text-2xl font-semibold whitespace-nowrap dark:text-black ml-3">
                    Society of Alumni Affairs
                </span>
            </span>
        </div>
        <div
            class="nav-link duration-500 md:static absolute bg-white md:min-h-fit min-h-[60vh] left-0 top-[-100%] md:w-auto w-full flex items-center px-5 md:justify-end">
            <ul class="flex md:flex-row flex-col md:items-center md:gap-[2vw] gap-8">
                <% Object.entries(NavLinks).forEach(([key, [text, linkOrSublinks]],index) => { %>
                    <li >
                        <% if(Array.isArray(linkOrSublinks)){ %>
                            <button id="dropdownDelayButton<%= index%>" data-dropdown-toggle="dropdownDelay<%= index%>" data-dropdown-delay="200" data-dropdown-trigger="hover" class="text-black bg-white hover:text-gray-500 focus:outline-none   rounded-lg   text-center inline-flex items-center dark:bg-white dark:hover:text-gray-500 " type="button">
                                <%= text %>
                                <svg class="w-2.5 h-2.5 ms-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 10 6">
                                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 4 4 4-4"/>
                                </svg>
                            </button>
                            <% }else{ %>
                        <a class="nav-link nav-link-ltr" href="<%= linkOrSublinks %>"> <%= text %></a>
                        <% } %>
                   <% if (Array.isArray(linkOrSublinks)) { %>

                    <div id="dropdownDelay<%= index%>" class="z-40 hidden bg-white divide-y divide-gray-100 rounded-lg shadow w-44 dark:bg-white">
                        <ul class="py-2 text-sm text-black dark:text-black" aria-labelledby="dropdownDelayButton">
                            <% linkOrSublinks.forEach(([subText, subLink]) => { %>
                                <li>
                                  <a href="<%= subLink %>" target="_blank" class="block px-4 py-2 hover:bg-gray-100 dark:hover:bg-gray-100 dark:hover:text-black"><%= subText %></a>
                                </li>
                              <% }); %>
                        </ul>
                    </div>
                      <% } %>
                    </li>
                  <% }); %>
               
     
                </li>
            </ul>
        </div>
    </nav>
</header>